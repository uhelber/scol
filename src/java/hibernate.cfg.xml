<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/scol?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">nte</property>
    <property name="hibernate.connection.password">nte</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <mapping class="cac.mapeamento.AtivarConta"/>
    <mapping class="cac.mapeamento.Chamado"/>
    <mapping class="cac.mapeamento.Cidade"/>
    <mapping class="cac.mapeamento.Escola"/>
    <mapping class="cac.mapeamento.Funcao"/>
    <mapping class="cac.mapeamento.Laboratorio"/>
    <mapping class="cac.mapeamento.Parecer"/>
    <mapping class="cac.mapeamento.Permissao"/>
    <mapping class="cac.mapeamento.Pregao"/>
    <mapping class="cac.mapeamento.Regional"/>
    <mapping class="cac.mapeamento.Setor"/>
    <mapping class="cac.mapeamento.Status"/>
    <mapping class="cac.mapeamento.Usuario"/>
    <mapping class="cac.mapeamento.Login"/>
  </session-factory>
</hibernate-configuration>
